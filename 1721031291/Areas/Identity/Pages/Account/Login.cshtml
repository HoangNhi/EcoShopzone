@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="bg-slate-300 flex items-center">
    <div class="container bg-white flex p-0 my-10 h-[600px] rounded-2xl justify-center">
        <div class="lg:w-1/2 p-10">
            <img src="/images/assets/banner/main_logo.png" class="w-40" />
            <form id="account" method="post" class="flex flex-col justify-center items-center h-[90%]">
                <p class="text-center font-bold text-3xl mb-10">Welcome back</p>
                <div class="flex flex-col w-[350px] mx-auto">
                    <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                    <div class="form-floating mb-3 flex flex-col">
                        <label asp-for="Input.Email" class="font-sans font-medium">Email</label>
                        <input asp-for="Input.Email" class="border-0 border-b-2 focus:border-b-2 focus:border-zinc-950" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-red-500"></span>
                    </div>
                    <div class="form-floating my-3 mt-8 flex flex-col">
                        <label asp-for="Input.Password" class="font-sans font-medium">Password</label>
                        <input asp-for="Input.Password" class="border-0 border-b-2 focus:border-b-2 focus:border-zinc-950" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-red-500"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="font-semibold from-cyan-500 to-blue-500 rounded-md w-full bg-black text-white leading-10 my-3 hover:bg-gradient-to-r">Sign in</button>
                    </div>
                    <div class="flex justify-between mt-2">
                        <p class="m-0 text-sm hover:text-blue-500 hover:underline">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="m-0 text-sm hover:text-blue-500 hover:underline">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
        <div class="border-s w-1/2 hidden lg:block">
            <div class="myslider swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="item">
                            <div class="image relative h-[600px]">
                                <img src="~/Img/Left.png" style='height: 100%; width: 100%; object-fit: fill;' class="rounded-r-2xl" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="item">
                            <div class="image relative h-[600px]">
                                <img src="~/Img/Center.png" style='height: 100%; width: 100%; object-fit: fill' class="rounded-r-2xl" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="item">
                            <div class="image relative h-[600px]">
                                <img src="~/Img/Right.png" style='height: 100%; width: 100%; object-fit: fill' class="rounded-r-2xl" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}