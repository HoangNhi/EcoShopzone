@using _1721031291_DaoHoangNhi.Models;
@model List<ImageProduct>

<div class="card text-center">
    <div class="card-header">
        Danh sách hình ảnh - Image Product
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên hình ảnh</th>
                    <th>Đường dẫn</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var image in Model)
                {
                    <tr>
                        <td>@image.FileName</td>
                        <td>@image.FilePath</td>
                        <td>
                            <img src=@image.FilePath width="150" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-area="Admin" asp-controller="ImageProduct" asp-action="Update" class="btn btn-primary">Thêm hình ảnh</a>
    </div>
</div>
