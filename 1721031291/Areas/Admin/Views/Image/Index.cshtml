@using _1721031291_DaoHoangNhi.Models;
@model List<Image>

<div class="card text-center">
    <div class="card-header">
        Danh sách hình ảnh
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên hình ảnh</th>
                    <th>Mô tả</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var image in Model)
                {
                    <tr>
                        <td>@image.ImageName</td>
                        <td>@image.Description</td>
                        <td>
                            <img src="data:image/png;base64,@Convert.ToBase64String(image.ImageData)" alt="@image.ImageName" width="150" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Image" asp-action="Upload" class="btn btn-primary">Thêm hình ảnh</a>
    </div>
</div>
